<!-- views/login.ejs -->
<!DOCTYPE html>
<html>
<head>
	<title>Sarnar Software</title>
  <link href="CSS/bootstrap.3.3.4/bootstrap.css" rel="stylesheet" />
  <!-- load bootstrap css -->
  <link href="CSS/font-awesome-4.3.0/css/font-awesome.css" rel="stylesheet" />
  <!-- load fontawesome -->
  <link href="CSS/Oswald.css" rel="stylesheet" type="text/css"/>
  <script src="Script/jQuery.1.9.1/jquery-1.9.1.js"></script>
	<style>
    body { padding-top:80px;font-family: 'Oswald', sans-serif; }
  </style>
    <script>
         $(document).ready(function(){
          $("#loginform").submit(function () {
                  $("#loginbutton").html( "Logining...");
                  $("#loginbutton").prop("disabled", true);
                  return true;
              });
          });
    </script>
</head>
<body>
  
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-sign-in"></span> Login</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <!-- LOGIN FORM -->
            <form id="loginform" action="/login" method="post">
                <div class="form-group">
                    <span>Username</span>
                    <input type="text" class="form-control" name="username">
                </div>
                <div class="form-group">
                  <span>Password</span>
                    <input type="password" class="form-control" name="password">
                </div>
                <div class="form-group">
                  <span>Remember Me</span>
                    <input type="checkbox" class="form-control" name="remember" value="yes">
                </div>

                <button id="loginbutton" type="submit" class="btn btn-warning btn-lg">Login</button>
            </form>

            <hr>

            <p>Need an account? <a href="/signup">Signup</a></p>
            <p>Or go <a href="/">home</a>.</p>
        </div>
    </div>
</body>
</html>
